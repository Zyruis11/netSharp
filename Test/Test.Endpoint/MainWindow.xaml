<Window x:Class="Test.Endpoint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="SendData" Content="Send Data" HorizontalAlignment="Left" Margin="10,289,0,0" VerticalAlignment="Top" Width="75" Click="SendData_Click"/>
        <Button x:Name="EndpointControlButton" Content="Start" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="75" Click="EndpointControlButton_Click"/>
        <ComboBox x:Name="EndpointTypeSelector" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Server" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Client" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <TextBox x:Name="LogTextBox" HorizontalAlignment="Left" Height="134" Margin="10,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497"/>
        <TextBox x:Name="SendDataTextBox" HorizontalAlignment="Left" Height="30" Margin="10,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497"/>

    </Grid>
</Window>
